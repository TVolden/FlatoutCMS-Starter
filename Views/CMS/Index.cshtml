@using FlatoutCMS_Starter.Models;
@model PageModel
@inject FlatoutCMS.Core.PageRepository pageRepository
@{
    ViewData["Title"] = Model.Title;
}

<div class="text-center">
    @Html.Raw(Model.Content)
</div>

<div class="row justify-content-center m-5">
    @foreach (var reference in pageRepository.GetPagesIn<PageModel>("News"))
    {
        <div class="col-4 col-md text-center">
            <a href="@reference.Uri">
                <dic>
                    @reference.Model.Title
                </dic>
            </a>
        </div>
    }
</div>